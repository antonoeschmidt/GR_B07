<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background='@drawable/login_background'
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/usernameText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/default_stroke_width"
        android:drawableLeft="@drawable/login_user_image"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="E-mail"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/usernameText"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/default_stroke_width"
        android:drawableLeft="@drawable/login_password_image"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Adgangskode"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button"
        android:text="Tilmeld"
        android:textAllCaps="false"
        android:textColor="#1C2C06"
        android:textSize="18sp"
        android:layout_below="@id/passwordText"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/default_stroke_width"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tilmeld dig"
        android:textColor="#1C2C06"
        android:textSize="18sp"
        android:layout_margin="@dimen/default_stroke_width"
        android:layout_above="@id/usernameText"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>