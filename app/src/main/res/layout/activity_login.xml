<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background='@drawable/login_background'
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/usernameText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="UNI-Login"
        android:inputType="textPersonName"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/login_user_image"/>

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Adgangskode"
        android:inputType="textPassword"
        android:layout_margin="@dimen/default_stroke_width"
        android:layout_below="@id/usernameText"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/login_password_image"/>


    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button"
        android:text="Log ind"
        android:textColor="#1C2C06"
        android:textSize="18sp"
        android:layout_below="@id/passwordText"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/default_stroke_width"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Tilmeld dig"
        android:textColor="#00BB98"
        android:textSize="18sp"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/default_stroke_width"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>