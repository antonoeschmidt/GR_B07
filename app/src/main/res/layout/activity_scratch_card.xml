<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games.ScratchCardActivity"
    android:background="@drawable/gradient_rewards">

    <TextView
        android:id="@+id/ticketsScratchCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ticketbtn"
        android:padding="15dp"
        android:textColor="@color/colorFat"/>

    <ImageView
        android:id="@+id/scratchCover"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/default_stroke_width"
        android:background="@drawable/healthy_logo"/>

    <com.cooltechworks.views.ScratchImageView
        android:id="@+id/scratchCardView"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:background="@color/colorBlack"
        android:src="@drawable/scratch_card_image_lose"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/default_stroke_width"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/scratchCardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:textSize="24dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/default_stroke_width"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/redeemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem"
        android:textSize="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scratchCardView"
        android:layout_margin="@dimen/default_stroke_width"
        android:background="@drawable/mainmenu_reward_button"/>


</RelativeLayout>