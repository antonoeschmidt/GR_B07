<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_rewards"
    tools:context=".games.redeemRewards.RewardsPopUpActivity">

    <TextView
        android:id="@+id/rewardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrÃ¦mie"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rewardPhoto"
        android:layout_margin="@dimen/default_stroke_width"
        android:textColor="@color/colorBlack"/>

    <ImageView
        android:id="@+id/rewardPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/default_stroke_width"/>

    <ImageView
        android:id="@+id/rewardQRcode"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rewardName"
        android:layout_margin="@dimen/default_stroke_width"/>

</RelativeLayout>