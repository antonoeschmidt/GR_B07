<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutritionActivity"
    android:background="@color/colorAccent">

    <LinearLayout
        android:id="@+id/frameLayoutNutrition"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="290dp">


        <Button
            android:id="@+id/mainmenu_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nutrition_breakfast_button"
            android:gravity="center" />

        <Button
            android:id="@+id/mainmenu_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nutrition_lunch_button"
            android:gravity="center" />

        <Button
            android:id="@+id/mainmenu_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nutrition_dinner_button"
            android:gravity="center" />

        <Button
            android:id="@+id/mainmenu_button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nutrition_snacks_button"
            android:gravity="center" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>