<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutritionActivity"
    android:background="@color/colorHealthy">

    <LinearLayout
        android:id="@+id/linearLayoutNutrition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/caloriesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="CARBS / TOTAL CARBS"
            android:textAlignment="center"/>

        <ProgressBar
            android:layout_marginTop="2dp"
            android:id="@+id/progressbarCalories"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="120dp"
            android:progress="0"
            android:progressDrawable="@drawable/circle"
            android:rotation="-90"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:id="@+id/proteinTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Protein"/>

        <ProgressBar
            android:id="@+id/progressbarProtein"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:progressTint="@color/colorProtein" />

        <TextView
            android:id="@+id/carbsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Carbs"/>

        <ProgressBar
            android:id="@+id/progressbarCarbs"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:progressTint="@color/colorCarbs" />

        <TextView
            android:id="@+id/fatTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Fat"/>

        <ProgressBar
            android:id="@+id/progressbarFat"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:progressTint="@color/colorFat" />


        <Button
            android:layout_marginTop="2dp"
            android:id="@+id/testButton"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="TEST" />

        <Button
            android:id="@+id/breakfastButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nutrition_breakfast_button"
            android:gravity="center"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/lunchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nutrition_lunch_button"
            android:gravity="center"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/dinnerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nutrition_dinner_button"
            android:gravity="center"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/snacksButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nutrition_snacks_button"
            android:gravity="center"
            android:layout_marginTop="2dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>