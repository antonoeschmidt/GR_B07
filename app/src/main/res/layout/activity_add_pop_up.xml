<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".social.AddActivityPopUpActivity">

    <TextView
        android:id="@+id/textViewHeaderAddActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tilføj aktivitet"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <AutoCompleteTextView
        android:id="@+id/autoTextViewAddActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:hint="Søg efter aktivitet"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonAddActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        />

</RelativeLayout>